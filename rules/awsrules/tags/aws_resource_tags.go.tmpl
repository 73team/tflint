package tags

import (
	"fmt"
	"strings"
	"sort"

	hcl "github.com/hashicorp/hcl/v2"
	"github.com/terraform-linters/tflint/tflint"
)

// {{ .ResourceName }}TagsRule checks whether the resource is tagged correctly
type {{ .ResourceName }}TagsRule struct {
	resourceType  string
	attributeName string
}


// New{{ .ResourceName }}TagsRule returns new tags rule with default attributes
func New{{ .ResourceName }}TagsRule() *{{ .ResourceName }}TagsRule {
	return &{{ .ResourceName }}TagsRule{
		resourceType:  "{{ .ResourceType }}",
		attributeName: "tags",
	}
}

// Name returns the rule name
func (r *{{ .ResourceName }}TagsRule) Name() string {
	return "{{ .RuleName }}"
}

// Enabled returns whether the rule is enabled by default
func (r *{{ .ResourceName }}TagsRule) Enabled() bool {
	return true
}

// Severity returns the rule severity
func (r *{{ .ResourceName }}TagsRule) Severity() string {
	return tflint.ERROR
}

// Link returns the rule reference link
func (r *{{ .ResourceName }}TagsRule) Link() string {
	return ""
}

// Check checks for matching tags
func (r *{{ .ResourceName }}TagsRule) Check(runner *tflint.Runner) error {
	return runner.WalkResourceAttributes(r.resourceType, r.attributeName, func(attribute *hcl.Attribute) error {
		var resourceTags map[string]string
		err := runner.EvaluateExpr(attribute.Expr, &resourceTags)
		tags := []string{}
		for k, _ := range resourceTags {
			tags = append(tags, k)
		}

		return runner.EnsureNoError(err, func() error {
			configTags := runner.GetConfigTags()
			hash := make(map[string]bool)
			for _, k := range tags {
				hash[k] = true
			}
			var found []string
			for _, tag := range configTags {
				if _, ok := hash[tag]; ok {
					found = append(found, tag)
				}
			}
			if len(found) != len(configTags) {
				wanted := strings.Join(sort.StringSlice(configTags), ",")
				found := strings.Join(sort.StringSlice(tags), ",")
				runner.EmitIssue(r, fmt.Sprintf("Wanted tags: %v, found: %v\n", wanted, found), attribute.Expr.Range())
			}
			return nil
		})
	})
}
